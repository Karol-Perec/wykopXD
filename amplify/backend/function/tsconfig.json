{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/*": ["wykopxApiFunctionLayer/lib/nodejs/*"],
      "aws-lambda": [
        "wykopxApiFunctionLayer/lib/nodejs/node_modules/@types/aws-lambda"
      ],
      "axios": ["wykopxApiFunctionLayer/lib/nodejs/node_modules/axios"],
      "crypto-js": [
        "wykopxApiFunctionLayer/lib/nodejs/node_modules/@types/crypto-js"
      ]
    },
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true
  }
}
