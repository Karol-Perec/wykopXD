{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@wykop-types": ["types"],
      "@wykopx-types": ["../../../src/types"],
      "/opt/nodejs/*": ["wykopxApiFunctionLayer/lib/nodejs/*"],
      "aws-lambda": ["wykopxApiFunctionLayer/lib/nodejs/node_modules/@types/aws-lambda"]
    },
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true
  }
}
